            const box = document.querySelector('.box');

    const listColor = ['red', 'yellow', 'orange', 'green'];

    let currentColor = 1; 
    box.addEventListener('click', function() 
    {
        this.style.backgroundColor = listColor[currentColor++];
        if (currentColor == listColor.length){
            currentColor = 0; }}
